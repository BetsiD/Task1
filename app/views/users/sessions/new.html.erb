<div class="header">
    <%= image_tag("header.png", :alt => "header") %>
    <h1><i>My Blog</i></h1>
  </div>
  <div class="hr">
    <div class="create">
        <%= link_to "Sign up", new_registration_path(resource_name) %><br />
    </div>
    <div class="create">
        <%= link_to "Blogs", blogs_path %><br />
    </div>
  </div>
  <div class="container">  
    <table align="center" class=new_session>
      <tr>
        <td>
  <span align="center" style="color: #FEBF33; text-shadow: -1px 0 #000000, 0 1px #000000, 1px 0 #000000, 0 -1px #000000;"><h2><i>Log In</i></h2></span>
</td>
</tr>
      <tr><td><%- flash.each do |name, msg| -%>
    <span style="color: #ff0000; font-size: 13px;"><%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %></span>
  <%- end -%> </td></tr>
      
<tr>
  <td>

<%= form_with(model: @user, local: true, url: user_session_path) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
<br>

<%= link_to "Forgot your password?", new_password_path(resource_name), :style => 'color:#000000' %>
</td>
</tr>
</table>
<br><br><br>
</div>
